<h1>Blogs</h1>
<div class="col">
    {{#each blogs}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content">
                <h5>{{title}}</h5>
                <P>{{categories}}</P>
                <p>{{stripTags (truncate body 150)}}</p>
                <br>
            </div>

            <div class="card-action">
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/blogs/user/{{user._id}}"> {{user.displayName}}</a>
                </div>
                <a href="/blogs/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No blogs to display</p>
    {{/each}}
</div>